<% if current_user != nil %>
  <h1>
    Welcome back, <%= current_user.email %>
  </h1>
<% end %>

<div class="page-header">
  <h1>
    Movies
    <a href="/movies/new" class="btn btn-lg btn-success">New Movie</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "movies_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

<div class="form-group">
    <%= f.label :image_url_cont, "Image url contains" %>
    <%= f.text_field :image_url_cont, :class => "form-control", :placeholder => "Image url contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
  <%= f.label :duration, "Duration" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :duration_gteq, :class => "form-control", :placeholder => "Duration greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :duration_lteq, :class => "form-control", :placeholder => "Duration less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :year, "Year" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :year_gteq, :class => "form-control", :placeholder => "Year greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :year_lteq, :class => "form-control", :placeholder => "Year less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :director_name_cont, "Director name contains" %>
      <%= f.text_field :director_name_cont, :class => "form-control", :placeholder => "Director name contains" %>
    </div>

<div class="form-group">
      <%= f.label :characters_name_cont, "Character name contains" %>
      <%= f.text_field :characters_name_cont, :class => "form-control", :placeholder => "Character name contains" %>
    </div>

<div class="form-group">
      <%= f.label :cast_name_cont, "Actor name contains" %>
      <%= f.text_field :cast_name_cont, :class => "form-control", :placeholder => "Actor name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/movies" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#movies_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Duration</th>
        <th>Description</th>
        <th>Image url</th>
        <th>Director</th>
        <th>Actions</th>
      </tr>

      <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.duration %></td>
        <td><%= movie.description %></td>
        <td><%= movie.image_url %></td>
        <td>
          <% if movie.director.present? %>
            <a href="/directors/<%= movie.director.id %>">
              <%= movie.director.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/movies/<%= movie.id %>" class="btn btn-primary">Show</a>
          <a href="/movies/<%= movie.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_movie/<%= movie.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @movies, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
